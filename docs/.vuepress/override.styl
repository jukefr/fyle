@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Mono:400,400i|IBM+Plex+Sans:400,400i,700,700i');

body
  font-family 'IBM Plex Sans', sans-serif !important

code, kbd, .line-number
  font-family 'IBM Plex Mono', monospace !important

.feature h2
  text-align center

.home .hero .description
  max-width 950px

a.sidebar-link
  .sidebar-sub-headers &
    &.active
      font-weight 700 !important

a
  font-weight 700 !important

strong
  font-weight 700 !important

h1, h2, h3, h4, h5, h6
  font-weight 700 !important
  .content:not(.custom) > &
    .prefix
      font-weight 700 !important

.feature
  h2
    font-weight 700 !important